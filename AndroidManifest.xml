<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iti.jets.carpoolingV1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.iti.jets.carpoolingV1.splashscreen.SplashScreen"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.iti.jets.carpoolingV1.synccontactsactivity.SyncContactsActivity"
            android:label="@string/title_activity_sync_contacts" >
        </activity>
        <activity
            android:name="com.iti.jets.carpoolingV1.editprofileactivity.EditProfileActivity"
            android:label="@string/title_activity_edit_profile" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.iti.jets.carpoolingV1.editprofileactivity.EditNameActivity"
            android:label="@string/title_activity_edit_name" >
        </activity>
        <activity
            android:name="com.iti.jets.carpoolingV1.editprofileactivity.EditDateActivity"
            android:label="@string/title_activity_edit_date" >
        </activity>
    </application>

</manifest>